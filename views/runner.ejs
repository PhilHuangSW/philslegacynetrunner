    const resource = <%- JSON.stringify(resource) %>;
    const cardModal = document.getElementById('cardModal');
    console.log(identity)
    console.log(event)
    console.log(hardware)
    console.log(program)
    console.log(icebreaker)
    console.log(resource)
    cardModal.addEventListener('show.bs.modal', function (e) {
      // Button that triggered the modal
      const button = e.relatedTarget;
      // Extract info from data-bs-* attributes
      var cardCodeRegex = button.getAttribute('data-bs-whatever');
      const card_id = button.getAttribute('data-bs-whatever').match(/(\d+)(?=\w)/)[0];
      
      // console.log(card_id);
      const card_type = button.getAttribute('data-bs-whatever').match(/[a-z]+/)[0];
      // console.log(card_type);
      const card_array_index = button.getAttribute('data-bs-whatever').match(/(?<=\D)(\d+)/)[0];
